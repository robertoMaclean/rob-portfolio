---
const personalImageAlt = "Roberto Mac lean";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import FileIcon from "@/components/icons/File.astro";
---

<div class="max-w-3xl">
  <div class="flex justify-between">
    <div class="flex flex-col">
      <h1
        class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl"
      >
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-500 from-sky-600 dark:to-emerald-400 dark:from-sky-600"
          >Roberto Mac lean</span
        >
      </h1>
      <h2
        class="hero-subtitle text-2xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
        data-role-es="Ingeniero de Software"
        data-role-en="Software Engineer"
        data-location-es="de Viña del Mar, Chile."
        data-location-en="from Viña del Mar, Chile."
      >
        <strong>Ingeniero de Software</strong> de Viña del Mar, Chile.
      </h2>
    </div>
    <img
      class="rounded-full shadow-lg size-14 md:size-24 lg:size-40"
      src="/me.webp"
      alt={personalImageAlt}
    />
  </div>

  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:r.maclean.m@gmail.com">
      <MailIcon class="size-4" />
      <span class="translatable-text" data-text-es="Contáctame" data-text-en="Contact me">Contáctame</span>
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/roberto-maclean">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="./files/robertoMacleanCV.pdf" download="robertoMacleanCV">
      <FileIcon class="size-4" />
      <span class="translatable-text" data-text-es="Currículum" data-text-en="Resume">Currículum</span>
    </SocialPill>
  </nav>
</div>
